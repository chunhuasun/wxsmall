/* pages/timetraveler/timetraveler.wxss */
.header-view {
  height: 54px;
  align-items: center;
  background-color: #FFF;
  display:flex;
}
.header-info{
  /* flex: 1; */
  font-size: 18px;
  box-sizing: border-box;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding-left: 34rpx;
  line-height: 100%;
  /* height: 100%; */
}
.header-view__put{
  width: 40%;
}
.header-view__pic{
  width: 60%;
}
.body-list{
  padding: 4px 6px 14px;
}
.list-cloumn {
  display:flex;
  flex-direction:row;
  font-size: 18px;
  height: 46rpx;
  padding: 10px 12px;
  overflow: hidden;
  align-items: center;
  background-color: #fff;
  margin: 1px 0;
  border-radius: 3px;
  opacity: 0;
}
.list-image {
  margin: 8rpx 12rpx;
  /* border-radius: 12px; */
  border:2rpx solid #D9D9D9;
}
.item-image {
  /* margin-right: 5px; */
  vertical-align: middle;
  max-width: 100%;
  /* height: 48px; */
}
.cloumn-text{
  white-space: nowrap;
  display: block;
  width: 100%;
  height: 50px;
  line-height: 17px;
}
.cloumn-icon{
  margin-right: 2px;
}
.done{
  text-decoration: line-through;
  color: #ccc;
}
.view-line1{
  border-top: 8px solid #eee;
}
.view-line2{
  border-top: 12px solid #eee;
}




.button-add-info{
  align-items: center;
 display: flex;
 margin:0 auto;
}
.button-width{
  width:90%;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height:2.3;
font-size:18px;
padding:0 1.34em;
}
.button-reset{
 width:90%;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height:2.3;
font-size:18px;
padding:0 1.34em; 
}
.item-info { 
  height: 80rpx;
  display: flex;
}
.add-button-reset{
  width:30%; 
  margin-left:5%;
}
.add-button{
  width:30%; 
   margin-left:30%; 
}

.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
