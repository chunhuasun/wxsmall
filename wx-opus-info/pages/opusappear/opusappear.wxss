/* pages/timerecord/timerecord.wxss */

.weui-cells {
  font-size: 32rpx;
  color: black;
}

.weui-cells__title {
  margin-top: 0.47em;
}

.weui-btn {
  line-height: 2;
  width: 35%;
}

.weui-btn-area {
  margin: 0.7em 10% 0.3em;
}

.btn-space {
  margin-left: 68%;
}

.item-image {
  /* margin-right: 5px; */
  vertical-align: middle;
  max-width: 100%;
  /* height: 48px; */
  display:block;
  margin:auto;
}

.weui-cell__history {
  /* padding: 6px 6px; */
  border: 1rpx solid #d9d9d9;
  width: 30%;
}
.weui-cell__listen {
  /* padding: 6px 6px; */
  border: 1rpx solid #d9d9d9;
  border-top:none;
  border-bottom:none;
  width: 30%;
}

.weui-uploader__input-box {
  width: 47px;
  height: 47px;
}

.weui-uploader__img {
  width: 47px;
  height: 47px;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: -50px;
  left: 0;
  z-index: 2000;
  background: #fff;
}

.close_icon {
  width: 25rpx;
  height: 25rpx;
  line-height: 20rpx;
  font-size: 30rpx;
  position: absolute;
  right: 5rpx;
  top: 5rpx;
  padding: 10rpx;
  color: #ccc;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  text-align: center;
  background: #fff;
}

.drawer_attr_content {
  /* padding: 60rpx 20rpx 20rpx 20rpx; */
  height: 1000rpx;
  overflow-y: scroll;
}

.drawer_image {
  width: 400rpx;
  height: 400rpx;
}

.drawer_desc {
  font-size: 26rpx;
  margin: 20rpx;
}

.btn {
  width: 80%;
  padding: 15rpx 0;
  border-radius: 10rpx;
  text-align: center;
}

.open_btn {
  margin: 40rpx 10%;
  border-radius: 10rpx;
  background: #20bb21;
  color: #fff;
}

.weui-tab__content {
  padding-top: 4rpx;
  text-align: center;
  flex-direction: row;
  height: 580rpx;
}

.weui-tab {
  border: 0.5px solid #d7d6dc;
}

.weui-navbar__item {
  padding: 13rpx 0;
}

.weui-tab__conbut {
  margin: 13rpx;
  color: #ff8719;
  /* background-color: #ff8719;  */
}

.weui-tab__panel {
  height: 70%;
  padding-top: 40px;
}

.zan-badge {
  position:relative;
  display: inline-block;
}

.zan-badge__icon {
  position: absolute;
  top: 14px;
  right: 20px;
  height: 1.6em;   
  font-size: 10px; 
  border-radius: 0.8em; 
  transform: translateX(50%);
  transform-origin: -10% center; 
}
.weui-textarea{
  height: 80px;
}
.weui-cells__titletype{
  color:none;
  font-size:14px;
  text-align: center;
  margin-top:0.47em;
  margin-bottom:0.3em;
}
.weui-flex__lineitem{
  display:flex; 
  border-top:1rpx solid #D9D9D9;
  border-bottom:1rpx solid #D9D9D9;
}

.list-cloumn {
  display:flex;
  flex-direction:row;
  font-size: 18px;
  height: 46rpx;
  padding: 10rpx 24rpx;
  overflow: hidden;
  align-items: center; 
  margin: 1px 0;
  border-radius: 3px;
  border:1rpx solid #D9D9D9;
}
.list-image {
  margin: 8rpx 12rpx;
  /* border-radius: 12px; */
  border:2rpx solid #D9D9D9;
}

.cloumn-text__text{
  white-space: nowrap;
  display: block;
  width: 20%; 
  height: 50px;
  line-height: 17px;
  font-size:34rpx; 
  color:#999999;
  /* padding-right: 14rpx; */
}
.cloumn-text__Info{
  white-space: nowrap;
  display: block;
  width: 80%;
  height: 50px;
  line-height: 17px;
  font-size:34rpx; 
  border: 1rpx solid #d9d9d9;
  border-top:none;
  border-bottom:none;
  background-color: #fff;
  padding-left: 14rpx;
}
.weui-cell__genre {
  border: 1rpx solid #d9d9d9;
  margin: 2px 2px;
}
.weui-select__date{
  width: 80%;
  background-color:#fff;
  border:1rpx solid #d9d9d9;
  font-size:34rpx;
}
.weui-select{
  padding-left: 14rpx;
}
.weui-uploader__icon{
  top: 20%;
  left: 20%;
  position:absolute;
}
.weui-uploader__file {
  position:relative;
  display: inline-block;
}